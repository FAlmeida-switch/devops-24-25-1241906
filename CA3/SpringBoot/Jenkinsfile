pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'falmeidaswitch/ca3-spring-app'
        DOCKER_CREDENTIALS_ID = 'docker-hub-credentials' // Set this in Jenkins credentials
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          extensions: [
                            [$class: 'RelativeTargetDirectory', relativeTargetDir: '.']
                          ],
                          userRemoteConfigs: [[url: 'https://github.com/FAlmeida-switch/devops-24-25-1241906.git']]
                        ])
            }
        }

        stage('Verify Structure') {
            steps {
                script {
                    sh '''
                    echo "Project structure:"
                    ls -la
                    echo "CA1/part3 contents:"
                    ls -la CA1/part3
                    echo "CA3/SpringBoot contents:"
                    ls -la CA3/SpringBoot
                    '''
                }
            }
        }

        stage('Build Backend') {
            steps {
                dir('CA1/part3') {
                    script {
                        sh 'chmod +x gradlew || true'
                        sh './gradlew clean assemble'
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('CA1/part3') {
                    script {
                        sh './gradlew test'
                        junit 'build/test-results/test/**/*.xml'
                    }
                }
            }
        }

        stage('Generate Javadoc') {
            steps {
                dir('CA1/part3') {
                    script {
                        sh './gradlew javadoc'
                        publishHTML([
                            allowMissing: false,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: 'build/docs/javadoc',
                            reportFiles: 'index.html',
                            reportName: 'Javadoc'
                        ])
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Copy built JAR to Docker context
                    sh 'cp CA1/part3/build/libs/*.jar CA3/SpringBoot/'

                    dir('CA3/SpringBoot') {
                        docker.withRegistry('', env.DOCKER_CREDENTIALS_ID) {
                            def customImage = docker.build(
                                "${env.DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}",
                                '.'
                            )
                            customImage.push()
                            customImage.push('latest')
                        }
                    }
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'CA1/part3/build/libs/*.jar', fingerprint: true
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo "Pipeline succeeded!"
        }
        failure {
            echo "Pipeline failed - check logs for details"
        }
    }
}